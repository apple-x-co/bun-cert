{
  "name": "bun-cert",
  "module": "index.js",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "npm-run-all": "^4.1.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "compile:darwin-arm64": "bun build index.js --compile --target=bun-darwin-arm64 --outfile bin/bun-cert-darwin-arm64",
    "compile:linux-x64": "bun build index.js --compile --target=bun-linux-x64 --outfile bin/bun-cert-linux-x64",
    "compile": "npm-run-all --serial compile:darwin-arm64 compile:linux-x64",
    "run": "bun run index.js --hostname example.com"
  }
}
